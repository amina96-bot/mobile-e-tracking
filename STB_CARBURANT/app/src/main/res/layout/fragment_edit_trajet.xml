<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".ui.dashbord.EditTrajetFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Motif de déplacement:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tools:ignore="MissingConstraints" />

                <CheckBox
                    android:id="@+id/checkBoxTravail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travail" />

                <CheckBox
                    android:id="@+id/checkBoxMission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission" />

                <CheckBox
                    android:id="@+id/checkBoxPersonnel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personnel" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">

                <ImageView
                    android:id="@+id/adf_img_calendar_depart"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/calendar2"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Date départ"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                    <TextView
                        android:id="@+id/adf_text_calendar_depart"
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:hint="Date départ"
                        android:textColor="#675F5F"
                        android:textSize="13sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/kilometrage2"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Kilométrage départ"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />

                    <TextView
                        android:id="@+id/textView_kilometrage_depart"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Kilométrage départ"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/location5"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Lieu départ"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />


                    <TextView
                        android:id="@+id/textView_lieu_depart"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="lieu départ"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="5" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">

                <ImageView
                    android:id="@+id/adf_img_calendar_arrivee"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/calendar2"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Date arrivée"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                    <TextView
                        android:id="@+id/adf_text_calendar_arrivee"
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:hint="---------- --:--:--"
                        android:textColor="#675F5F"
                        android:textSize="13sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/kilometrage2"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Kilométrage arrivée"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />

                    <EditText
                        android:id="@+id/editText_kilometrage_arrivee"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:ems="10"
                        android:hint="Km"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/location5"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Lieu arrivée"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />

                    <EditText
                        android:id="@+id/editText_lieu_arrivee"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:ems="10"
                        android:hint="..."
                        android:inputType="text"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="5" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/notes"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Commentaire"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                    <EditText
                        android:id="@+id/notes"
                        android:layout_width="214dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ems="10"
                        android:hint="Note"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:visibility="visible"
                        app:layout_column="2"
                        app:layout_gravity="center_vertical"
                        app:layout_row="4"
                        tools:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/linearLayout4"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/stop_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/stop" />

                    <TextView
                        android:id="@+id/stop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Arrêter le trajet" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/save_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/save_changes" />

                    <TextView
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Sauvegarder" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
