<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".ui.dashbord.InfoTrajetFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:id="@+id/trajetStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="MissingConstraints" />
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_horizontal|left"
                    android:text="Motif de déplacement:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tools:ignore="MissingConstraints" />

                <CheckBox
                    android:id="@+id/checkBoxTravail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travail" />

                <CheckBox
                    android:id="@+id/checkBoxMission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission" />

                <CheckBox
                    android:id="@+id/checkBoxPersonnel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personnel" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">

                <ImageView
                    android:id="@+id/adf_img_calendar_depart"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/calendar2"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Date départ"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                    <TextView
                        android:id="@+id/textView_date_depart"
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:hint="Date départ"
                        android:textColor="#675F5F"
                        android:textSize="13sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/kilometrage2"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Kilométrage départ"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />

                    <TextView
                        android:id="@+id/textView_kilometrage_depart"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Kilométrage départ"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/location5"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Lieu départ"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />


                    <TextView
                        android:id="@+id/textView_lieu_depart"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="lieu départ"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="5" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">

                <ImageView
                    android:id="@+id/adf_img_calendar_arrivee"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/calendar2"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Date arrivée"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                    <TextView
                        android:id="@+id/textView_date_arrivee"
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:hint="Date arrivée"
                        android:textColor="#675F5F"
                        android:textSize="13sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/kilometrage2"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Kilométrage arrivée"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />

                    <TextView
                        android:id="@+id/textView_kilometrage_arrivee"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="kilométrage arrivée"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/location5"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Lieu arrivée"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />

                    <TextView
                        android:id="@+id/textView_lieu_arrivee"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="lieu arrivée"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="5" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="#EDECEF">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/notes"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Commentaire"
                        app:layout_column="3"
                        app:layout_gravity="center_vertical"
                        app:layout_row="3" />

                    <TextView
                        android:id="@+id/textView_notes"
                        android:layout_width="214dp"
                        android:layout_height="wrap_content"
                        android:hint="Note"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout4"
                            android:layout_marginTop="16dp"
                            android:padding="15dp">


<!--                            <Button-->
<!--                                android:id="@+id/delete_button"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_weight="1"-->
<!--                                android:shadowColor="#FFFFFF"-->
<!--                                android:layout_marginRight="100dp"-->
<!--                                android:backgroundTint="#F66E6E"-->
<!--                                android:text="Supprimer" />-->

                            <Button
                                android:id="@+id/edit_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:shadowColor="#FFFFFF"
                                android:backgroundTint="@color/teal_700"
                                android:text="Modifier" />
                        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>